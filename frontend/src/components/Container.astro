---
export interface Props {
  class?: string;
  outerClass?: string;
  innerClass?: string;
}

const { class: className, outerClass, innerClass } = Astro.props;
---

<!-- Outer Container -->
<div class={`sm:px-8 ${outerClass || ''}`}>
  <div class="mx-auto w-full max-w-7xl lg:px-8">
    <!-- Inner Container -->
    <div class={`relative px-4 sm:px-8 lg:px-12 ${innerClass || ''} ${className || ''}`}>
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <slot />
      </div>
    </div>
  </div>
</div>