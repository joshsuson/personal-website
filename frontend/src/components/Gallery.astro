---
export interface Props {
	images: Array<{
		url: string;
		alternativeText?: string;
	}>;
}

const { images } = Astro.props;
const strapiUrl = import.meta.env.STRAPI_URL || 'http://localhost:1337';

const rotations = ['rotate-2', '-rotate-2', 'rotate-2', 'rotate-2', '-rotate-2'];
---

<div class="mt-16 sm:mt-20">
	<div class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8">
		{images.map((image, imageIndex) => (
			<div
				class={`relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 sm:w-72 sm:rounded-2xl dark:bg-zinc-800 ${rotations[imageIndex % rotations.length]}`}
			>
				<img
					src={`${strapiUrl}${image.url}`}
					alt={image.alternativeText || "Gallery image"}
					loading="lazy"
					class="absolute inset-0 h-full w-full object-cover"
				/>
			</div>
		))}
	</div>
</div>
