---
export interface Props {
	images: Array<{
		url: string;
		alternativeText?: string;
	}>;
}

const { images } = Astro.props;
const strapiUrl = import.meta.env.STRAPI_URL || 'http://localhost:1337';

const rotations = ['rotate-2', '-rotate-2', 'rotate-2', 'rotate-2', '-rotate-2'];
---

<div class="mt-16 sm:mt-20">
	<div class="-my-4 flex justify-center gap-6 overflow-hidden py-8 sm:gap-8">
		{images.map((image, imageIndex) => (
			<div
				class={`vibrant-card relative aspect-[9/10] w-48 flex-none sm:w-80 ${rotations[imageIndex % rotations.length]} transition-transform hover:scale-105 hover:z-10`}
				style="padding: 12px;"
			>
				<img
					src={`${strapiUrl}${image.url}`}
					alt={image.alternativeText || "Gallery image"}
					loading="lazy"
					class="w-full h-full object-cover rounded-lg"
				/>
			</div>
		))}
	</div>
</div>
